.typing(tabindex="0" x-ng-focus="true" ng-keypress="keyPress($event)" ng-keydown="keyDown($event)")
  .container
    .title
      img(src="{{imgSrcMap[language]}}")
      h1.timer   {{clock.seconds | formatTimer}}
    pre
      span(ng-repeat="char in promptStack track by $index" ng-class="{'current': $index===inputStack.length, 'incorrect': inputStack[$index][1] === undefined ? false : !inputStack[$index][1]}") {{char[0]}}